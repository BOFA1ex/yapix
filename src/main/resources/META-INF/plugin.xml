<idea-plugin>
    <id>yapix</id>
    <name>Yapi X</name>
    <version>0.0.1.20210821001</version>
    <vendor url="https://github.com/jetplugins">Jetplugins</vendor>

    <description><![CDATA[
    Generate api document to any where, like yapi, rap2, eolinker, markdown etc <br>
    一键生成接口文档, 上传到yapi, rap2, eolinker等 <br>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceImplementation="io.yapix.yapi.config.YapiSettings"/>
        <applicationService serviceImplementation="io.yapix.rap2.config.Rap2Settings"/>
        <applicationConfigurable parentId="tools" instance="io.yapix.config.YapixSettingsConfiguration">
            <configurable displayName="Yapi" instance="io.yapix.yapi.config.YapiSettingsConfiguration"/>
            <configurable displayName="Rap2" instance="io.yapix.rap2.config.Rap2SettingsConfiguration"/>
        </applicationConfigurable>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="UploadToRap2" class="io.yapix.rap2.Rap2UploadAction" text="Upload To Rap2"
            description="UploadToRap2">
            <add-to-group group-id="EditorLangPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <action id="UploadToYapi" class="io.yapix.yapi.YapiUploadAction" text="Upload To Yapi"
            description="UploadToYapi">
            <add-to-group group-id="EditorLangPopupMenu" anchor="first"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>

    <change-notes><![CDATA[
      <p>0.0.1</p>
      <ul>
        <li>1.支持生成文档</li>
        <li>2.支持上传到Yapi平台</li>
        <li>2.支持上传到Rap2平台</li>
      </ul>
      ]]></change-notes>

</idea-plugin>
